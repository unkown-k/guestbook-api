<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.testDemo.dao.mapper.TestMapper">


    <select id="testSelect" resultType="com.demo.testDemo.model.TestModel" parameterType="com.demo.testDemo.model.TestModel"  >
SELECT id,title,content,is_delete  from  message
        <where>
        <if test="title!=null and title!=''">
            title  LIKE  CONCAT('%',#{title},'%')
        </if>
            <if test="id!=null and id!=0">
             and   id = #{id}
            </if>
            <if test="content!=null and content!=''">
             and   content  LIKE CONCAT('%',#{content},'%')
            </if>

        </where>
    </select>
    <update id="testUpdate" parameterType="com.demo.testDemo.model.TestModel"  >
update message set title=#{title} where id=#{id}
    </update>
    <insert id="testInsert" parameterType="com.demo.testDemo.model.TestModel"  >
insert message (title,content) values (#{title},#{content})
</insert>
    <update id="testDelete" parameterType="com.demo.testDemo.model.TestModel"  >
update message set is_delete=1 where id=#{id}
</update>

</mapper>
